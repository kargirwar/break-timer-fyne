doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        link(rel="stylesheet" href="/all.min.css")
        link(rel="stylesheet" href="/css/bulma.min.css")
        link(rel="stylesheet" href="/css/styles.css")
    body

        #container
            #controls
                button.button#add-rule
                    span.icon
                        i.fa-solid.fa-plus
                    span Add Rule

                div#num-of-rules No rules
                div#save-rules
                        i.fa-solid.fa-floppy-disk
            #rules

        script(type="module" src="/js/index.js")
        script#rule-template(type="code")
            .rule-container
                span Take a break: #[br]
                .interval-container
                    span every
                    select.interval
                        option(value=10) 10 mins
                        option(value=15) 15 mins
                        option(value=20) 20 mins
                        option(value=25) 25 mins
                        option(value=30 selected) 30 mins
                        option(value=35) 35 mins
                        option(value=40) 40 mins
                        option(value=45) 45 mins
                        option(value=50) 50 mins
                        option(value=55) 55 mins
                        option(value=60) 60 mins

                .days-container
                    span on
                    select.days
                        option(value="weekdays" selected) Weekdays
                        option(value="weekends") Weekends

                .time-container
                    span from
                    select.from
